.page-header
  %h1
    GeoLocation Challenge
    %small
      =link_to "All Locations", locations_path, class: "btn btn-success btn-xs"
      =link_to "About", landing_about_path, class: "btn btn-success btn-xs"
.div.main
  .row
    .col-md-4.col-md-offset-1
      %h1.main-header Locations
    .col-md-2.col-md-offset-4.upload.well
      =form_tag import_locations_path, multipart: true do
        .div.form-group.pull-right
          .h4 Upload Locations
          .div.form-group
            =file_field_tag :file, class: "form-control"
          .div.form-group
            =submit_tag "Import"
  .row
    .col-md-6.col-md-offset-1.locations.well
      .h2 Closest 5 Locations
      -@locations.limit(5).each do |loc|
        .ul
          .li
            .h4
              #{loc.name}
              %small.pull-right
                .h6 Latitude: #{loc.latitude} Longitude: #{loc.longitude}
            #{loc.address_1}
    .col-md-3.col-md-offset-1.map-canvas.well
      %iframe{src:"https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3341.420309552469!2d-117.32801348430841!3d33.124320780868594!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMzPCsDA3JzI3LjYiTiAxMTfCsDE5JzMzLjAiVw!5e0!3m2!1sen!2sus!4v1467788015011", class: "visual" }
